{
  "default": true,
  "line-length": false,
  "heading-style": {
    "style": "atx"
  },
  "ul-style": {
    "style": "asterisk"
  },
  "ul-indent": {
    "indent": 4
  },
  "no-trailing-spaces": {
    "br_spaces": 0,
    "strict": true
  },
  "no-hard-tabs": {
    "spaces_per_tab": 4
  },
  "no-multiple-blanks": {
    "maximum": 4
  },
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "hr-style": {
    "style": "---"
  },
  "proper-names": {
    "code_blocks": false
  },
  "code-block-style": {
    "style": "fenced"
  },
  "code-fence-style": {
    "style": "backtick"
  },
  "emphasis-style": {
    "style": "asterisk"
  },
  "strong-style": {
    "style": "asterisk"
  }
}
